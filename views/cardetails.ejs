            color:rgb(0, 0, 0)010;
            font-size: 15px;
            letter-spacing: 1px;
            margin: 20px 0 0 0px;
            font-family: sans-serif;
            padding: 0 10px;
            outline: none;
            border: 1px solid #aaa;
        }
        textarea{
            width: 300px;
            background: transparent;
            color:rgb(0, 0, 0)010;
            font-size: 15px;
            letter-spacing: 1px;
            margin: 20px 0 0 0px;
            font-family: sans-serif;
            padding: 10px 10px;
            outline: none;
            border: 1px solid #aaa;
        }
        .contact-form form input:focus{
            outline: none;
        }
        ::placeholder{
            color:#000000;
            font-family: Arial;
            font-size: 14px;
        }
        .btnn{
            font-size: 18px;   
            cursor: pointer;
            color:#fff;
            text-decoration: none;
            background-color: #217C7E;
            padding: 10px 20px;
            margin: 30px 20px 10px 20px;
            border: #fff;
            transition: 0.4s ease;
