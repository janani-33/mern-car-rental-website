        .menu{
            float: left;
        }
        .menu ul{
            float: left;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }
        .menu ul li{
            list-style: none;
            margin: 10px 0 0 80px;
            font-size: 15px;
            letter-spacing: 1px;
        }
        .menu ul li a{
            text-decoration: none;
            color: #000000;
            font-family: Arial;
            transition: 0.4s ease-in-out;
        }
        .menu ul li a::after {
            content: '';
            display: block;
            background-color: #028482;
            height: 1.5px;
            margin: 1px 1px 0 1px;
            transform: scaleX(0);
            transition: transform 300ms;
        }
        .menu ul li a:hover::after {
            transform: scaleX(1);
        }
        .menu ul li i{
            padding: 1px;
            color: #292929;
        }
        .menu ul li .active{
            color: #028482;
        }
        .menu p{
            padding: 5px 0 0 80px;
