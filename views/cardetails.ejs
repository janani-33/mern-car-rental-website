        .navbar{
            width: 100%;
            height: auto;
            padding: 4px 70px 8px 50px;
            background-color: #dededeab;
            position: fixed;
            z-index: 1;
        }
        .navbar .icon{
            width:200px;
            float: left;
        }
        .add{
            padding: 10px 20px;
            background: #d27fd4;
            border:none;
            font-size: 18px;
